@using Domin.Model;
@model RegisterViewModel


@{
    Layout = "_Layout";
}

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/assest/css/style.css" rel="stylesheet" />

</head>
<body class="img js-fullheight" style="background-image: url('/assest/images/bg.jpg');

	<section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section"></h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">

                    @* نمایش پیام موفقیت با استفاده از ViewBag.IsSent *@
                    @if (ViewBag.IsSent == true)
                    {
                                    <div class="alert alert-success text-center" style="font-family:Exo">
                                   "Your registration was successful! Please check your email to activate your account."

                                </div>
                    }

                        <h3 class="mb-4 text-center"></h3>
                            <form asp-action="Register" asp-controller="Account" method="post">
                        @Html.AntiForgeryToken()

                                    <div asp-validation-summary="ModelOnly" class="text-danger" ></div>
                            </br>
                            <div class="form-group">
                                <input type="text" style="font-family:Samim" asp-for="UserName" style="font-family:Exo" class="form-control" name="UserName" placeholder="Username" required>
                            </div>
                                <div class="form-group">
                                <input type="text" style="font-family:Samim" asp-for="Email" style="font-family:Exo" class="form-control" name="Email" placeholder="Email" required>
                            </div>
                            <div class="form-group">
                                <input id="password-field" asp-for="Password" type="password" style="font-family:Exo"class="form-control" placeholder="Password" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                                <div class="form-group">
                                <input id="password-field" asp-for="Repassword" type="password" style="font-family:Exo" class="form-control" placeholder="Repassword" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" value="Register" class="form-control btn btn-primary submit px-3">Sign In</button>
                            </div>
                          <div style="display: flex; justify-content: space-between;">
                                <div class="w-50 text-md-right">
                                    <a style="color: #fff; font-family:Exo;text-align:right" asp-action="" asp-controller=""></a>
                                </div>
                                <div class="w-50 text-md-right">
                                    <a style="color: #fff font-family:Exo" asp-action="Login" asp-controller="Account">Login</a>
                                </div>
                            </div>
               
                        </form>
                  
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/assest/js/jquery.min.js"></script>
    <script src="~/assest/js/main.js"></script>
    <script src="~/assest/js/popper.js"></script>
    <script src="~/assest/js/bootstrap.min.js"></script>
    <script src="~/assest/js/main.js"></script>

</body>
</html>

