@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    @if (ViewBag.IsConfirmed)
    {
        <div class="alert alert-success">
            حساب کاربری شما تایید شد لطفا با کلیک بر روری لینک زیر وارد سایت شوید
        </div>
        <p><a asp-action="Login" asp-controller="Account">Login to web site</a></p>
    }
    else
    {
        <div class="alert alert-danger">
            حساب کاربری شما تایید نشد
        </div>
    }
</div>
