            <a asp-controller="Url" asp-action="index"><i class="fas fa-home"></i></a>
            <a asp-controller="Url" asp-action="CreateUrl"><i class="far fa-cog"></i></a>
@*            <a href="#"><i class="fas fa-user"></i></a>
*@        </div>
